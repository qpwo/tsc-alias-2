{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "ES6",
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "rootDir": "./src/",
        "paths": {
            "@b": [
                "./src/nested/directory/b"
            ]
        }
    },
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
